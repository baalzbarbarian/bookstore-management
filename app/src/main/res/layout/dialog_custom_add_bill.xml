<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/background_add_title"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:gravity="left"
                android:textSize="24sp"
                android:fontFamily="@font/windsorb"
                android:text="Thêm Hóa Đơn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/windsorb"
                android:paddingLeft="30dp"
                android:text="@string/text_add_types"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <EditText
                android:id="@+id/addBill_txt1"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:fontFamily="@font/windsorb"
                android:textColorHint="#FFF"
                android:paddingLeft="10dp"
                android:hint="Mã hóa đơn"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/round_edt"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:id="@+id/addBill_txt2"
                    android:textColor="#FFF"
                    android:fontFamily="@font/windsorb"
                    android:textColorHint="#FFF"
                    android:paddingLeft="10dp"
                    android:hint="Ngày xuất hóa đơn"
                    android:background="@drawable/round_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

                <Button
                    android:textColor="#FFF"
                    android:background="@drawable/btn_add_class"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:text="Date"
                    android:id="@+id/addBill_btnDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

<!--            <EditText-->
